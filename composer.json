{
    "name": "thebrains-group/number-converter",
    "description": "Number Converter in PHP",
    "keywords": [
        "TheBrains Group",
        "number-converter"
    ],
    "homepage": "https://github.com/thebrains-group/number-converter",
    "license": "MIT",
    "authors": [
        {
            "name": "Mr Wiltek",
            "email": "underclash94@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "pestphp/pest": "^4.0",
        "friendsofphp/php-cs-fixer": "^3.21.1",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "TheBrains\\NumberConverter\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TheBrains\\NumberConverter\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
